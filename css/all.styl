---

dark-blue = #1F3344
orange = #F9A530
chicle = 'Chicle', cursive
fenix = 'Fenix', serif
londrina = 'Londrina Sketch', cursive
annie = 'Annie Use Your Telescope', cursive

@-webkit-keyframes strikeThrough
  0%
    -webkit-transform: translateX(0)

  100%
    -webkit-transform: translateX(100%)

@-webkit-keyframes breakAway
  0%
    -webkit-transform: translateY(0)

  60%
    -webkit-transform: rotate(-5deg) translateY(60%)

  100%
    opacity: 0
    -webkit-transform: rotate(5deg) translateY(100%)

@-webkit-keyframes fadeInAndUp
  0%
    opacity: 0
    -webkit-transform: translateY(100px)

  98%
    -webkit-transform: translateY(0)

  100%
    opacity: 1

@-webkit-keyframes pulse
  
  0%
    -webkit-transform: scale(1)

  100%
    -webkit-transform: scale(1.1)

@-webkit-keyframes bounce
  0%, 20%, 50%, 80%, 100%
    -webkit-transform: translateY(0)
    transform: translateY(0)

  40%
    -webkit-transform: translateY(-30px)
    transform: translateY(-30px)

  60%
    -webkit-transform: translateY(-15px)
    transform: translateY(-15px)

*
  box-sizing: border-box
  margin: 0
  padding: 0

img
  max-width: 100%

body
  background: dark-blue
  font-family = 'Open Sans', sans-serif
  font-size: 100%
  line-height: 1.5
  min-height: 100vh
  color: #fff
  font-size: 18px

h1
h2
h3
h4
h5
h6
  color: #fff
  font-weight: 300

h1
  font-weight: 500
  font-size: 70px
  font-family: fenix

h2
  font-size: 54px

h3
  font-size: 36px

p
ul
table
  margin-bottom: 24px

ul
ol
  margin-left: 20px


.scroller
  -webkit-transform: translateZ(0)
  -webkit-transition: -webkit-transform 0.5s ease

.scrollable
  overflow: auto
  .scroller
    -webkit-transform: translateY(-400px)
  .down-arrow
    display: none
  .splash__image
    opacity: 1
    -webkit-transform: translateY(100px)

.intro
  color: #fff
  text-align: center
  line-height: 1.2

.intro__name
  color: orange

.splash
  min-height: 100vh
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  position: relative
  padding-bottom: 10%

.dropper
  position: relative
  width: 100%
  max-width: 800px

.dropper__item
  opacity: 0
  -webkit-animation: fadeInAndUp 0.25s ease forwards
  position: absolute
  width: 100%

.dropper__item:nth-child(2)
  -webkit-animation-delay: 2.8s
  .desc
    -webkit-animation-delay: 5.7s
    &:before
      -webkit-animation-delay: 4.9s

.dropper__item:nth-child(3)
  -webkit-animation-delay: 7.7s
  .desc
    -webkit-animation: none
    color: #fff
    font-size: 26px
    &:before
      -webkit-animation: none

.desc
  color: rgba(255,255,255,0.4)
  font-family: annie
  position: relative
  padding: 0 20px
  overflow: hidden
  -webkit-animation: breakAway 0.8s 1.5s ease forwards
  text-align: center
  display: inline-block
  margin-left: -200px
  left: 50%
  font-size: 42px
  &:before
    position: absolute
    width: 100%
    height: 2px
    background-color: rgba(255,255,255,0.4)
    display: block
    content: ''
    top: 35px
    left: -100%
    -webkit-transform: translateZ(0)
    -webkit-animation: strikeThrough 0.5s 1s ease-in forwards

.down-arrow
  width: 60px
  height: 60px
  background-image: url(/img/arrow-down.svg)
  background-size: cover
  position: absolute
  bottom: 40px
  left: 50%
  margin-left: -30px
  -webkit-animation: bounce 1.5s 10s ease infinite
  -webkit-transition: all 0.25s ease
  z-index: 50
  cursor: pointer
  opacity: 0.8
  &:before
    display: block
    position: absolute
    content: 'See my work'
    font-family: fenix
    font-size: 18px
    text-transform: uppercase
    top: -40px
    color: #fff
    width: 200px
    text-align: center
    margin-left: -100px
    left: 50%
  &:hover
    opacity: 1

.splash__image
  width: 80%
  background-image: url(/img/swapsies.png)
  background-position: top center
  background-repeat: no-repeat
  background-size: 80%
  position: absolute
  margin-left: -40%
  left: 50%
  height: 100%
  opacity: 0.05
  top: 70%
  -webkit-transition: all 0.5s 1s ease

.content
  -webkit-transform: translateZ(0)
  -webkit-transition: -webkit-transform 0.5s ease

.scrollable
  .content
    -webkit-transform: translateY(-400px)

.container
  width: 100%
  max-width: 600px
  margin: 0 auto